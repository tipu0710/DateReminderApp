<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.systech.farha.datereminderapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity android:name="com.systech.farha.datereminderapp.activity.ChangePasswordActivity" />
        <activity android:name="com.systech.farha.datereminderapp.activity.AddClient" />
        <activity android:name="com.systech.farha.datereminderapp.activity.AddFriend" />
        <activity android:name="com.systech.farha.datereminderapp.activity.PasswordActivity" />
        <activity android:name="com.systech.farha.datereminderapp.activity.RecoverQuestionActivity" />
        <activity android:name="com.systech.farha.datereminderapp.activity.PasswordRecoveryActivity" />
        <activity android:name="com.systech.farha.datereminderapp.activity.ProfileEditActivity" />
        <activity android:name="com.systech.farha.datereminderapp.activity.QuestionActivity" />
        <activity android:name="com.systech.farha.datereminderapp.activity.ProfileActivity" />
        <activity
            android:name="com.systech.farha.datereminderapp.alarm.Edit_Note"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.systech.farha.datereminderapp.alarm.View_Note"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.systech.farha.datereminderapp.alarm.Alert"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.systech.farha.datereminderapp.alarm.CreateNote"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.systech.farha.datereminderapp.alarm.AlarmActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.systech.farha.datereminderapp.activity.EventActivity"
            android:noHistory="true" />
        <activity
            android:name="com.systech.farha.datereminderapp.activity.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.systech.farha.datereminderapp.activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.systech.farha.datereminderapp.activity.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.systech.farha.datereminderapp.activity.FriendListActivity"
            android:label="@string/title_activity_friend_list"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.systech.farha.datereminderapp.activity.BorrowerListActivity"
            android:label="@string/title_activity_borrower"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.systech.farha.datereminderapp.activity.LoanerListActivity"
            android:label="@string/title_activity_loaner"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.systech.farha.datereminderapp.alarm.RingtonePlayingService"
            android:enabled="true" />
        <service
            android:name="com.systech.farha.datereminderapp.alarm.RingtonePlayingJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver
            android:name="com.systech.farha.datereminderapp.alarm.BroadcastAlarm"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.systech.farha.datereminderapp.alarm.AlarmReceiver"
            android:process=":remote" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.systech.farha.datereminderapp.alarm.NotificationManager2" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.systech.farha.datereminderapp.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>